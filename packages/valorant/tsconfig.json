{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",

    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "moduleDetection": "force",

    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@tools/valorant/*": ["./src/*"],
      "@shadcn/ui/*": ["./src/components/ui/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,

    "checkJs": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
